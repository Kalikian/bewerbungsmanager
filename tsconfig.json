{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src", "src/types", "drizzle.config.js"],
  "exclude": ["node_modules"]
}
