{
  "private": true,
  "name": "bewerbungsmanager",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "concurrently -n BE,FE -c blue,green \"yarn --cwd apps/backend dev\" \"yarn --cwd apps/frontend dev\"",
    "dev:be": "yarn --cwd apps/backend dev",
    "dev:fe": "yarn --cwd apps/frontend dev",
    "build": "yarn --cwd packages/shared build && yarn --cwd apps/backend build && yarn --cwd apps/frontend build",
    "lint": "eslint ."
  },
  "packageManager": "yarn@4.6.0",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.0.17"
  }
}
